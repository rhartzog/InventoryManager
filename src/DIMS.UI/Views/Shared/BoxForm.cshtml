@model DIMS.UI.Models.Edit.BoxForm

<div class="modal fade" id="createBoxModal" tabindex="1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("Create", "Box", FormMethod.Post, new {role = "form", @class = "form-horizontal"}))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Create Box</h4>
                </div>
                <div class="modal-body">
               
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(m => m.Label, new {@class = "col-sm-2 control-label"})
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Label, new {@class = "form-control", placeholder = "Box Label"})
                            @Html.ValidationMessageFor(m => m.Label)
                        </div>
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.Description, new {@class = "col-sm-2 control-label"})
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Description, new {@class = "form-control", placeholder = "Description"})
                            @Html.ValidationMessageFor(m => m.Description)
                        </div>
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.SelectedCategory, new {@class = "col-sm-2 control-label"})
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m => m.SelectedCategory, Model.AvailableBoxCategories, new {@class = "form-control"})
                        </div>
                    </div>
                    
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.Campus)
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>